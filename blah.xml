<!-- 
    Les DTD  
    Document Type Definition
-->
<!-- Syntaxe -->
<!ELEMENT balise (contenu)>

<contact>
    <nom>Durand</nom>
</contact>

<!-- balise contenant une autre balise -->
<!ELEMENT contact (nom)>
<!-- pour la balise nom -->
<!ELEMENT nom (#PCDATA)>

<!-- si la balise est vide -->
<!ELEMENT nom EMPTY>

<!-- Si la balise peut contenir des données ou non -->
<!ELEMENT nom ANY>

